<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <style>
        .data-display {
            display: grid;
            grid-template-columns: repeat(3,1fr);
        }
        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            padding:1em
        }
        .card h3 {
            text-align: center;
        }

    </style>
    <nav>
      <a href="/home" aria-current="page">Home</a>
      <a href="/profile">Profile</a>
      <% if(userType.is_librarian) { %>
        <a href="/productInput">Product Input</a>
        <a href="/history">User Manager</a>
      <% } else if (userType.is_admin) { %>
        <!--ADD ADMIN PAGES-->
      <% } %>
      <a href="/">Logout</a>
    </nav>
    <form id="search" method="GET" action="/api/search">
    <form method="GET" action="/api/search">
      <main class="container">
        <h1 class="page-title">Search Library</h1>
        <!-- Search Bar -->
        <div>
          <label for="search">Search</label>
          <input type="text" id="search" placeholder="Search by title, author, ISBN..." name="search_str"/>
        </div>

        <!-- Sort By Dropdown -->
        <div class="filter-section">
          <label for="searchOption">Sort by:</label>
          <select name="searchOption" id="searchOption">
            <option value="" disabled selected>Select Sorting</option>
            <option value="title">Title</option>
            <option value="publisher">Publisher</option>
            <option value="studio">Studio</option>
            <option value="runtime">Runtime</option>
            <option value="rating">Rating</option>
          </select>
        </div>

        <!-- Genre Filter Section with Checkboxes -->
        <div class="filter-section">
          <h3>Filter by Genre</h3>
          <label><input type="checkbox" name="genre" value="Fiction" /> Fiction</label>
          <label><input type="checkbox" name="genre" value="Non-Fiction" /> Non-fiction</label>
          <label><input type="checkbox" name="genre" value="Mystery" /> Mystery</label>
          <label><input type="checkbox" name="genre" value="Fantasy" /> Fantasy</label>
          <label><input type="checkbox" name="genre" value="Science" /> Science</label>
          <label><input type="checkbox" name="genre" value="Biography" /> Biography</label>
          <label><input type="checkbox" name="genre" value="History" /> History</label>
        </div>

        <!-- Options Section with Checkboxes for Book or Movie -->
        <div class="filter-section">
          <h3>Options</h3>
          <label><input type="checkbox" name="mediaType" value="book" /> Book</label>
          <label><input type="checkbox" name="mediaType" value="movie" /> Movie</label>
        </div>
      </main>
    </form>
    <!-- Section for displaying JSON data -->
    <main class="container">
      <h2 class="page-title">Product List</h2>
      <div id="data-display" class="data-display">
        <!-- JSON data will be dynamically injected here -->
      </div>
    </main>

    <!-- Modal for editing items -->
    <%if (userType.is_librarian) { %>
      <div id="editModal" class="modal">
        <div class="modal-content">
          <span class="close-btn" onclick="closeModal()">&times;</span>
          <h2>Edit Product</h2>
          <form id="editForm">
            <label for="editTitle">Title:</label>
            <input type="text" id="editTitle" name="editTitle" />
            <label for="editGenre">Genre:</label>
            <input type="text" id="editGenre" name="editGenre" />
            <label for="editPrice">Price:</label>
            <input type="number" id="editPrice" name="editPrice" step="0/01" />
            <label for="editAvailable">Available:</label>
            <input type="number" id="editAvailable" name="editAvailable" step="1" />
            <label for="editLeased">Leased:</label>
            <input type="number" id="editLeased" name="editLeased" step="1" />
            <label for="editRequests">Requests:</label>
            <input type="number" id="editRequests" name="editRequests" step="1" />
            <div class="book_form">
              <label for="editNum_pages">Number of Pages:</label>
              <input type="text" id="editNum_pages" name="editNum_pages" />
              <label for="editPublisher">Publisher:</label>
              <input type="text" id="editPublisher" name="editPublisher" />
              <label for="editIsbn">ISBN:</label>
              <input type="text" id="editIsbn" name="editIsbn" />
            </div>
            <div class="movie_form">
              <label for="editRating">Rating:</label>
              <input type="text" id="editRating" name="editRating" />
              <label for="editIsan">ISAN:</label>
              <input type="text" id="editIsan" name="editIsan" />
              <label for="editRuntime">Runtime:</label>
              <input type="number" id="editRuntime" name="editRuntime" />
              <label for="editStudio">Studio:</label>
              <input type="text" id="editStudio" name="editStudio" />
            </div>
            <br>
            <button type="button" onclick="saveChanges()">Save</button>
          </form>
        </div>
      </div>
    <% } %>

    <!-- change to just card_query -->
    <script>
      const user = <%- JSON.stringify(userType) %>
    </script>
    <script src="card_query.jsx"></script>
    <script src="query.js"></script>
  </body>
</html>
